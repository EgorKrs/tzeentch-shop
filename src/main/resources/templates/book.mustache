<!-- SEARCH -->
<div class="search hidden">
    <div class="search__container">
        <div class="search__inner autocomplete">
            <div class="search__input-wrap">
                <div class="search__icon search__icon_left">
                    <i class="fa fa-search"></i>
                </div>
                <input type="text" id="MainSearchInput" class="search__input form__input autocomplete__input">
                <span id="addNewOne">
                    <i class="fas fa-plus"></i>
                </span>

                <div class="search__icon search__icon_right search__icon_close" data-search-toggle>
                    <svg>
                        <use xlink:href="#icon-close"></use>
                    </svg>
                </div>
                <div class="search__icon search__icon_right search__icon_loader">
                    <div class="loader-circle loader-circle_small"></div>
                </div>
            </div>
            <div class="search__types">
                <div class="search__type" id="BOOK" data-term="Книга" data-type="book"
                     data-url="http://localhost:9080/search?type=manga">Книга
                </div>
                <div class="search__type" id="AUTHOR" data-term="Автор" data-type="author"
                     data-url="http://localhost:9080/search?type=people">Автор
                </div>
                <!--                <div class="search__type" id="USER" data-term="Пользователя" data-type="user"-->
                <!--                     data-url="http://localhost:9080/search?type=user">Пользователь-->
                <!--                </div>-->
                <div class="search__type" id="FORUM" data-term="Форум" data-type="forum"
                     data-url="http://localhost:9080/search?type=forum">Тема форума
                </div>
                <div class="search__type" id="NEWS" data-term="Новости" data-type="news"
                     data-url="http://localhost:9080/search?type=news">Новости
                </div>
            </div>
            <div class="search__suggestions-wrap">
                <div class="search__suggestions autocomplete__suggestions">
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ SEARCH -->
<!-- Website Menu -->
<div class="header">
    <div class="header__inner">
        <div class="header__item header__left">
            <a href="index.mustache" class="header__logo">
                <img src="../images/Tzeentch-Shop-removebg.png" alt="Tzeench-Shop">
            </a>
        </div>
        <div class="header__item header__menu">
            <div class="header-menu">
                <div class="header-menu__item">
                    <a
                            href="http://localhost:9080/book/catalog"
                            title="Каталог"
                    > <i class="fa fa-bars"></i> Каталог</a>
                </div>
                <div class="header-menu__item" data-search-toggle>
                    <span id="search-link" title="Быстрый поиск"><i class="fa fa-search"></i> Поиск</span>
                </div>

                <div class="header-menu__item">
                    <a
                            href="http://localhost:9080/forum/all"
                            title="Форум"
                    ><i class="fas fa-comments"></i> Форум</a>
                </div>

            </div>
        </div>

        <div class="header__item header-right-menu">

            <div class="header-right-menu__item dropdown header-button">
                <div
                        id="changeThemeIcon"
                        class="header-button__icon tooltip"
                        data-place="bottom-end"
                        aria-label="Сменить тему"
                        data-toggle-theme>
                    <i class="fab fa-themeisle"></i>
                </div>
            </div>
        </div>
    </div>

</div>
<!--/ Website Menu -->
<script type="text/javascript" src="../js/menu.js"></script>
<script type="application/octet-stream" src="../js/vendor.js@id=5eIsiR0kOE2x"></script>
<script type="application/octet-stream" src="../js/main.js@id=VIL64XuxWN77"></script>

<div class="page" id="main-page">
    <div class="page__inner">

        <div class="manga-bg"
             style="background-image: linear-gradient(transparent, rgba(0, 0, 0, 0.8)), url(../images/bookshelf.jpg)">
            <div class="manga-bg__head container container_responsive">
                <h1 class="manga-bg__title"> {{Book.name}} </h1>
            </div>
        </div>

        <div class="container container_responsive container_offset manga manga_has-bg">


            <div class="page__wrapper page__wrapper_left">
                <section class="section paper clearfix manga__section-info" itemscope=""
                         itemtype="http://schema.org/CreativeWork">

                    <meta itemprop="name" content="{{Book.name}}">
                    <meta itemprop="url" content="http://localhost:9080/book?id={{Book.id}}">
                    <meta itemprop="description" content="{{Book.description}}">
                    <input type="hidden" value="{{Book.id}}" id="bookID">
                    <div class="section__body clearfix">
                        <!--  -->

                        <div class="manga__image">
                            <img src="{{Book.picture.url}}" alt="{{Book.picture.name}}" class="manga__cover">
                            <!--                            http://localhost:9080/book/download?id={{Book.id}}-->
                            <div class="manga__buttons">
                                {{#Bought}}
                                    <a class="button button_primary" id="BookDownloadLink"
                                       href="http://localhost:9080/book/download?id={{Book.id}}">Загрузить</a>
                                {{/Bought}}
                                {{^Bought}}
                                    <a class="button button_primary" id="BookDownloadLink"
                                       href="http://localhost:9080/book/download?id={{Book.id}}">Купить
                                    за {{Book.price}}</a>
                                {{/Bought}}
                            </div>
                        </div>
                        <div class="manga__body">
                            <div class="manga-rating" itemprop="aggregateRating" itemscope=""
                                 itemtype="http://schema.org/AggregateRating">
                                <meta content="5" itemprop="bestRating">
                                <meta content="{{Book.rating}}" itemprop="ratingValue">
                                <div class="manga-rating__top">
                                    <div class="manga-rating__stars rating">
                                        <span class="rating__star " data-score="5">
                                            <svg>
                                              <use xlink:href="#icon-star"></use>
                                            </svg>
                                          </span>
                                        <span class="rating__star " data-score="4">
                                            <svg>
                                              <use xlink:href="#icon-star"></use>
                                            </svg>
                                          </span>
                                        <span class="rating__star " data-score="3">
                                            <svg>
                                              <use xlink:href="#icon-star"></use>
                                            </svg>
                                          </span>
                                        <span class="rating__star " data-score="2">
                                            <svg>
                                              <use xlink:href="#icon-star"></use>
                                            </svg>
                                          </span>
                                        <span class="rating__star " data-score="1">
                                            <svg>
                                              <use xlink:href="#icon-star"></use>
                                            </svg>
                                          </span>
                                    </div>
                                </div>
                                <div class="manga-rating__value">{{Book.rating}}</div>
                                {{#CanEdit}}
                                    <a class="person__edit" href="http://localhost:9080/book/change?id={{Book.id}}"
                                    data-tippy-content="Редактировать">
                                    <svg>
                                        <use xlink:href="#icon-edit"></use>
                                    </svg>
                                    </a>
                                {{/CanEdit}}
                            </div>
                        </div>

                        <div class="info-list manga-info">
                            <div class="info-list__row">
                                <strong>Статус</strong>
                                <span>{{Book.bookStatus}}</span>
                            </div>
                            <div class="info-list__row">
                                <strong>Авторы</strong>
                                <input type="hidden" value="{{Authors}}" id="Authors">
                                <a href="http://localhost:9080/author?id="
                                   class="link-default"></a>
                            </div>

                            <div class="info-list__row">
                                <strong>Статус перевода</strong>
                                <span>{{Book.translationStatus}}</span>
                            </div>

                            <div class="info-list__row">
                                <strong>Дата релиза</strong>
                                <span>{{Book.printTime}}</span>
                            </div>

                            <div class="info-list__row" id="genreInfo">
                                <input type="hidden" id="bookGenre" value="{{Genres}}">
                                <strong>Жанры</strong>

                            </div>

                        </div>


                        <div class="info-desc manga__desc">
                            <div class="info-desc__title">Описание</div>
                            <div class="info-desc__content">{{Book.description}}</div>
                        </div>

                    </div>
            </div>

        </div>

        <div class="aside aside_right">
            <div class="aside__panel paper">
                <h3 class="aside__title">
                    <span class="aside__title-inner">В закладках у людей</span>
                </h3>

                <div class="aside__content aside__content_group aside-users">

                </div>

            </div>

            <div class="aside__panel paper">
                <input type="hidden" value="{{RelatedBooks}}" id="relatedBooks">
                <h3 class="aside__title"><span class="aside__title-inner">Вам может понравиться</span></h3>
            </div>
        </div>

        <div class="page__wrapper page__wrapper_left">
            <section class="section paper">

                <div class="news__comments">
                    <input type="hidden" id='Comment_related_to_bookId' value={{Book.id}}>
                    <section class="section paper">
                        <div class="section__header section__header_tabs comments-header">
                            <div class="section__header-title"><b>Комментарии</b>
                                <span
                                        class="text-muted comments-header__settings">

              </span>
                                <!---->
                            </div>
                            <ul class="tabs__list">
                                <li class="tabs__item tabs__item_active" data-type="desc"><span>Новые</span></li>
                                <li class="tabs__item" data-type="asc"><span>Старые</span></li>
                                <li class="tabs__item" data-type="pop"><span>Популярные</span></li>
                                <div class="tabs__line"
                                     style="display: block; width: 46px; transform: translateX(0px);"></div>
                            </ul>
                        </div>

                        <div class="comments">
                            <label for="NewCommentInput">
                                <input size="100%" id="NewCommentInput" class="comments__form comments__pseudo-form"
                                       placeholder="Написать комментарий..." type="text">
                            </label>
                            <div class="section__body" id="commentsPlace">
                            </div>
                        </div>
                    </section>
                </div>

            </section>


        </div>
    </div>

</div>

</div>
